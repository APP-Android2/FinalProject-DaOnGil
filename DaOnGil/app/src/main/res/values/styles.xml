<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Bottomnavigation 글자 설정-->
    <style name="BottomNaviTab" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>
    <style name="BottomNaviTab.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Main Toolbar Title TextApperance 설정 -->
    <style name="Theme.Toolbar.Main.Title" parent="">
        <item name="android:textSize">@dimen/font_big1</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/toolbar_main_title</item>
    </style>

    <!-- 상세 Toolbar Title TextApperance 설정 -->
    <style name="Theme.Toolbar.Title" parent="">
        <item name="android:textSize">@dimen/font_big2</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>