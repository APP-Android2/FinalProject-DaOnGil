<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewFScheduleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_basic"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="@dimen/font_big1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0월 0일 0요일" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFSchedulePlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFScheduleDate" />

    <Button
        android:id="@+id/buttonFScheduleAddPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_basic"
        android:layout_marginEnd="@dimen/margin_basic"
        android:layout_marginBottom="@dimen/margin_big1"
        android:backgroundTint="@color/primary_disabled"
        android:drawableTint="@color/text_primary"
        android:fontFamily="@font/pretendard_regular"
        android:text="새로운 장소 추가"
        android:textColor="@color/text_primary"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_add_24px"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewFSchedulePlaces" />

</androidx.constraintlayout.widget.ConstraintLayout>